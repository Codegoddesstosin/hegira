<div class="row">
    <div class="col-xs-3">
        
          <div class="col-sm-12" style="margin-top: -200px;">
            <img src="https://images.pexels.com/photos/343717/pexels-photo-343717.jpeg?auto=compress&cs=tinysrgb&h=650&w=940" height="200px" width="200px" class="rounded-img">
      </div>
         <div class="col-sm-12">
        <h3 style="font-weight: bold;"><%= params[:id] %></h3>
        <p>
        Bio: Live! Love! Learn! Grow!
        </p>
      </div>
     </div>



    
     <div class ="col xs-6">
         <%= render 'components/post_form' %>
          <% for @p in @posts %>
        
      <div class ="panel panel-default post-panel">
            <div class="panel-body row">
                <div class="col-sm-1">
                  <img class= "profile-img" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=a3fa46375259c39d07d0227e8ade6daa&auto=format&fit=crop&w=500&q=60" class="rounded-img" height="50px" width="50px"></img>
                </div>
                  <div class="col-sm-11">
                       <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username %></span><span class="post-creation"> - <%= @p.created_at.to_formatted_s(:time) %></p></span>
                       <p class="post-content"><%= @p.content %></p>
                </div>
                <div class="col-sm-12">
                  <p class="post-links">
                       <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
                         <span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
                    <span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
                           <a href=""> View Conversation</a>
                       </p>
                </div>
            
            </div>

        </div>
 
         <% end %>
         
 </div>

 
     <div class ="col-xs-3">
                 <%= render '/components/follow_button', :user => User.find_by_username(params[:id]) %>
             <div class ="panel panel-default">
                     
            <div class="panel-body">
                
          
                <h5 style="color: grey; font-size: 125%;">Who to follow</h5>
                
                 <% for @u in @toFollow do %>
               <p style="font-weight: bold; opacity: 0.85;" ><a href="/user/<%= @u.username %>"><%= @u.username %></a></p>
             <% end %>
            </div>
            
        </div>  
          <div class="panel panel-default">
            <div class="panel-body">
               
             <h5 style="color: grey; font-size: 125%;">Trends</h5>
              <a href="">#Trend #1</a><br>
                <span style="color: grey;">31k Posts</span><br><br>
              <a href="">#Trend #2</a><br>
                <span style="color: grey;">25k Posts</span><br><br>
              <a href="">#Trend #3</a><br>
                <span style="color: grey;">16k Posts</span><br><br>
         
 
   
            </div>
    </div>
    
    </div>
 </div>
</div>

  

